@startuml StateMachineDiagram

state "Учетная запись Пользователя" as UserAccount {
    [*] --> Активна : Регистрация
    Активна --> Заблокирована : Автоматическая блокировка (ФТ-015) / Администратор блокирует (ФТ-008)
    Активна --> Приостановлена : Штраф за задержку (ФТ-018)
    Заблокирована --> Активна : Администратор разблокирует
    Приостановлена --> Активна : Истечение срока приостановки (24 часа)
}

@enduml