@startuml
skinparam shadowing false
skinparam actorStyle awesome
skinparam activity {
    BackgroundColor #F7F7F7
    DiamondBackgroundColor #E0E0E0
    DiamondBorderColor #A0A0A0
    BarColor #A0A0A0
    SwimlaneWidth 220
}
title Управление ресурсами и пользователями администратором

start

partition "Администратор" {
    :Вход в административный интерфейс;
    :Выбор раздела управления;
}

if ("Ресурсы")
    partition "Управление ресурсами" {
        :CRUD ресурсов\n(ФТ-007.01);
        :Редактирование характеристик\n(ФТ-007.02);
        :Привязка к оборудованию\n(ФТ-007.03);
        :Просмотр статистики\n(ФТ-007.04);
        :Изменение программных профилей\n(ФТ-004.03);
        :Управление ПО и лицензиями\n(ФТ-016.01, ФТ-016.02);
        :Настройка тарифов\n(ФТ-012);
        :История использования\n(ФТ-011);
        :Отчёты по загруженности\n(ФТ-017);
        :Правила оптимизации\n(ФТ-020);
        :Модерация отзывов\n(ФТ-014.03);
    }
elseif ("Пользователи")
    partition "Управление пользователями" {
        :CRUD аккаунтов\n(ФТ-008.01);
        :Редактирование данных\n(ФТ-008.02);
        :История активности\n(ФТ-008.03);
        :Сброс учётных данных\n(ФТ-008.04);
        :Разблокировка аккаунтов\n(ФТ-015.03);
    }
elseif ("Системные функции")
    partition "Системные функции" {
        :Журнал действий/событий\n(ФТ-009);
        :Массовая рассылка\n(ФТ-013);
    }
endif

stop
@enduml